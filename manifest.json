{
  "manifest_version": 3,
  "name": "HTML Copier Tools",
  "version": "1.0",
  "description": "Copy page HTML with options to remove scripts and fix relative links.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "assets/icons/friendship-day-16.png",
    "32": "assets/icons/friendship-day-32.png",
    "128": "assets/icons/friendship-day-128.png"
  }
}
